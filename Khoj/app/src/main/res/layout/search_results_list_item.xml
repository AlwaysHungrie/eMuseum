<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/light_gray">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:id="@+id/sheona"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:contentDescription="Previews"/>

        <TextView
            android:id="@+id/color_name"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="278dp"
        android:layout_height="65dp"
            android:textStyle="normal"
            android:textSize="18sp"
            tools:text="color name"
            tools:textColor="#000000"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/sheona"
            android:layout_toRightOf="@id/sheona"
            />

        <TextView
            android:id="@+id/color_value"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sheona"
            android:layout_alignStart="@id/color_name"
            android:layout_alignLeft="@id/color_name"
            android:textStyle="italic"
            android:textColor="#000000"
            tools:text="#000000" />
    </RelativeLayout>
</android.support.v7.widget.CardView>